#:kivy 2.3.0

# ===== ESTILOS DOS BOTÕES =====
<CondoButton@Button>:
    background_color: 0.2, 0.6, 0.9, 1  # Azul suave Nubank
    color: 1, 1, 1, 1  # Texto branco
    size_hint: 1, None
    height: 70
    font_size: 16
    bold: True
    canvas.before:
        Color:
            rgba: 0.15, 0.5, 0.8, 0.3  # Sombra sutil
        RoundedRectangle:
            pos: self.x + 2, self.y - 2
            size: self.width, self.height
            radius: [15, 15, 15, 15]
        Color:
            rgba: self.background_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15, 15, 15, 15]

